FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create a proper entrypoint script
RUN cat > /app/entrypoint.sh << 'EOF'
#!/bin/bash
set -e

echo "üõ°Ô∏è Starting TrustLayer AI..."

# Function to download spaCy model with proper error handling
download_spacy_model() {
    echo "üì¶ Checking spaCy model availability..."
    
    # Check if large model exists
    if python -c "import spacy; spacy.load('en_core_web_lg')" 2>/dev/null; then
        echo "‚úÖ Large spaCy model (en_core_web_lg) is available"
        return 0
    fi
    
    # Check if small model exists
    if python -c "import spacy; spacy.load('en_core_web_sm')" 2>/dev/null; then
        echo "‚úÖ Small spaCy model (en_core_web_sm) is available"
        return 0
    fi
    
    # Try to download small model using proper spaCy command
    echo "üì• Downloading spaCy small model..."
    if python -m spacy download en_core_web_sm --user; then
        echo "‚úÖ Successfully downloaded en_core_web_sm"
        return 0
    fi
    
    # If download fails, try alternative method
    echo "‚ö†Ô∏è  Standard download failed, trying alternative method..."
    if pip install --user https://github.com/explosion/spacy-models/releases/download/en_core_web_sm-3.7.1/en_core_web_sm-3.7.1-py3-none-any.whl; then
        echo "‚úÖ Successfully installed model via direct download"
        return 0
    fi
    
    echo "‚ö†Ô∏è  Could not download spaCy model. TrustLayer will use basic NLP (reduced accuracy)"
    echo "   PII detection will still work but with lower precision"
    return 1
}

# Download model (don't fail if it doesn't work)
download_spacy_model || true

echo "üöÄ Starting application..."
exec "$@"
EOF

RUN chmod +x /app/entrypoint.sh

# Create non-root user
RUN useradd -m -u 1000 trustlayer && chown -R trustlayer:trustlayer /app
USER trustlayer

# Expose ports
EXPOSE 8000 8501

# Use entrypoint script
ENTRYPOINT ["/app/entrypoint.sh"]

# Default command
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]